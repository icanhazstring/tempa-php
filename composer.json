{
    "name": "icanhazstring/tempa-php",
    "description": "Template file parsing library",
    "type": "library",
    "require": {
        "symfony/console": "^2.8|^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "adlawson/vfs": "^0.12.1",
        "squizlabs/PHP_CodeSniffer": "^2.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "icanhazstring",
            "email": "blubb0r05+github@gmail.com"
        }
    ],
    "bin": [
        "bin/tempa"
    ],
    "autoload": {
        "psr-4": {
            "Tempa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tempa\\Test\\": "test/Tempa/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "phpcs --standard=PSR2 src/ && phpcs --standard=PSR2 --ignore=test/Demo test/"
    }
}
